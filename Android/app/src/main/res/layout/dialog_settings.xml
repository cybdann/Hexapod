<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/curve_shape"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/azonix"
                android:textAlignment="center"
                android:text="Show gyroscope"
                android:textColor="#FAFAFA"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/azonix"
                android:textAlignment="center"
                android:text="Show speedometer"
                android:textColor="#FAFAFA"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/azonix"
                android:textAlignment="center"
                android:text="Show left leg positions"
                android:textColor="#FAFAFA"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/azonix"
                android:textAlignment="center"
                android:text="Show right leg positions"
                android:textColor="#FAFAFA"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/azonix"
                android:textAlignment="center"
                android:text="Show hexapod statuses"
                android:textColor="#FAFAFA"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

           <Switch
               android:layout_width="wrap_content"
               android:layout_height="20dp"
               tools:ignore="UseSwitchCompatOrMaterialXml"
               android:id="@+id/switchGyro"
               android:checked="true"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                tools:ignore="UseSwitchCompatOrMaterialXml"
                android:id="@+id/switchSpeedometer"
                android:checked="true"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                tools:ignore="UseSwitchCompatOrMaterialXml"
                android:id="@+id/switchLeftLegLeds"
                android:checked="true"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                tools:ignore="UseSwitchCompatOrMaterialXml"
                android:id="@+id/switchRightLeds"
                android:checked="true"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                tools:ignore="UseSwitchCompatOrMaterialXml"
                android:id="@+id/switchStatuses"
                android:checked="true"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_dialog"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:background="@drawable/button_menu_background"
        android:fontFamily="@font/azonix"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#FAFAFA"/>

</LinearLayout>